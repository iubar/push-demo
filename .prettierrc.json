{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "printWidth": 140,
        "useTabs": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": false,
        "bracketSameLine": true,
        "arrowParens": "always",
        "bracketSpacing": true,
        "quoteProps": "preserve"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json5",
        "printWidth": 140,
        "tabWidth": 2,
        "trailingComma": "none",
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    },
    {
      "files": "*.yml",
      "options": {
        "printWidth": 140,
        "tabWidth": 2
      }
    }
  ]
}
